<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MiniLydia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Background" parent="Theme.MiniLydia">
        <item name="android:background">@color/lightBackground</item>
    </style>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- TEXT STYLES -->

    <style name="Text" parent="Theme.MiniLydia">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Header1">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

    <style name="Text.Header2">
        <item name="android:textSize">@dimen/text_x_large</item>
    </style>

    <style name="Text.Header3">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Header4">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>